extends ../layout

block body_content

  
  nav
    ul.right.hide-on-med-and-down
      li
        a(href="#!") Login
      li
        a(href="#!") Sign up to be a Paultato
    ul#slide-out.side-nav.fixed.col.s12.m4.l3
      li
        a(href="#!") Bills
      li
        a(href="#!") Cashflow
    a.button-collapse(href="#" data-activates="slide-out")
      i.mdi-navigation-menu

  div.main
    // For 992px change CSS remove margin-left padding
    div.row
      div.col.s12.m3.l3
        div.card
          div.card-image
            img(src="#")
            span.card-title User's Name  
          div.card-content
            p This area will contain information pertaining to the user.
          div.card-action
            a(href="#") See more about {{user}}


block js_custom
  script(type="text/javascript")
    $(".button-collapse").sideNav();
